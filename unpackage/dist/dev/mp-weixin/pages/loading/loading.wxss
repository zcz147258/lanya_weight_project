
page{
	background-color: #f4f2f2;
}

.fixed {
  padding: 30rpx;
  position: fixed;
  bottom: 10rpx;
  width: 90%;
  height: 100rpx;
  z-index: 998;
}
.fixed view {
  color: white;
  font-size: 35rpx;
  font-weight: 480;
  text-align: center;
  background: -webkit-linear-gradient(#FFC747, #FE9105);
  background: linear-gradient(#FFC747, #FE9105);
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 60rpx;
}
.container {
  padding: 30rpx;
}
.container .else .item {
  color: #515151;
  margin-top: 25rpx;
  padding: 35rpx;
  background-color: white;
  border-radius: 20rpx;
}
.container .else .item .date {
  padding-bottom: 35rpx;
  font-weight: bolder;
  border-bottom: 1rpx solid #efefef;
}
.container .else .item .center {
  font-size: 28rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 1rpx solid #efefef;
}
.container .else .item .center .left {
  padding: 30rpx 0rpx 30rpx 50rpx;
}
.container .else .item .center .left .des::before {
  content: "";
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  background-color: #FEB835;
  margin-bottom: 5rpx;
}
.container .else .item .center .right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.container .else .item .center .right .tobuka {
  padding: 10rpx 25rpx;
  background-color: #FEB835;
  border-radius: 30rpx;
  color: white;
  font-weight: bolder;
}
.container .else .item .center .right .already {
  padding: 10rpx 25rpx;
  background-color: white;
  border-radius: 30rpx;
  border: 3rpx solid #FEB835;
  color: #FEB835;
  font-weight: bolder;
}
.container .else .item .last {
  font-size: 28rpx;
  margin-top: 25rpx;
}
.container .else .item .last .intro {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.container .else .item .last .intro > view:not(:nth-child(1)) {
  color: #FEB835;
  font-weight: bolder;
}
.container .else .item .last .details {
  margin-top: 25rpx;
  padding-left: 50rpx;
}
.container .else .item .last .details > view:not(:nth-child(1)) {
  margin-top: 30rpx;
}
.container .else .item .last .details view::before {
  content: "";
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  background-color: #FEB835;
  margin-bottom: 5rpx;
}

