.fixed {
  padding: 30rpx;
  position: fixed;
  bottom: 10rpx;
  width: 90%;
  height: 100rpx;
  z-index: 998;
}
.fixed view {
  color: white;
  font-size: 35rpx;
  font-weight: 480;
  text-align: center;
  background: -webkit-linear-gradient(#FFC747, #FE9105);
  background: linear-gradient(#FFC747, #FE9105);
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 60rpx;
}
.center {
  padding: 30rpx;
}
.center > view {
  padding: 15rpx;
  background: -webkit-linear-gradient(#FFC747, #FEA119);
  background: linear-gradient(#FFC747, #FEA119);
  border-radius: 30rpx;
  box-shadow: 2px 2px 5px 3px #cacaca;
}
.center > view .first {
  padding-left: 30rpx;
  font-size: 35rpx;
  font-weight: bolder;
  color: white;
  margin-bottom: 30rpx;
}
.center > view .second {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
