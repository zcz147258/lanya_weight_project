          justify-content: center;
  margin-bottom: 45rpx;
}
.center > view .second .text {
  font-weight: bolder;
  font-size: 35rpx;
  margin-right: 10rpx;
  line-height: 62rpx;
  height: 62rpx;
}
.center > view .second .number {
  font-size: 40rpx;
  font-weight: bolder;
  line-height: 62rpx;
  height: 62rpx;
}
.center > view .third {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
